<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, autofocus: true, required: true %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"> <%= flash[:alert] %> </p>
<% end %>
